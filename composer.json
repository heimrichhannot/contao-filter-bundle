{
    "name": "heimrichhannot/contao-filter-bundle",
    "type": "contao-bundle",
    "description": "A generic contao filter.",
    "license": "LGPL-3.0-or-later",
    "require": {
        "php": "^7.1",
        "contao/core-bundle": "^4.4",
        "heimrichhannot/contao-utils-bundle": "^1.0",
        "heimrichhannot/contao-multi_column_editor": "^1.4",
        "codefog/contao-haste": "^4.18",
        "twig/extensions": "^1.5"
    },
    "require-dev": {
        "contao/test-case": "^1.1",
        "contao/manager-plugin": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.2",
        "phpunit/phpunit": "^6.5",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "HeimrichHannot\\FilterBundle\\": "src/"
        },
        "classmap": [
            "src/"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HeimrichHannot\\FilterBundle\\Test\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "extra": {
        "contao-manager-plugin": "HeimrichHannot\\FilterBundle\\ContaoManager\\Plugin"
    }
}
